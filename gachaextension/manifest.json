{

  "manifest_version": 2,
  "name": "GachaExtension",
  "version": "1.0",

  "description": "Tracks internet navigation actions to generate virtual currency.",

  "permissions": [
      "webNavigation", "webRequest", "storage"
],

  "browser_action": {
    "browser_style": true,
    "default_popup": "popups/gachapopup.html",
    "default_icon": {
      "16": "icons/icon_joypad.png",
      "32": "icons/icon_joypad.png"
  }
  },

  "background": { 
      "scripts": ["gachaextension.js"]
    }
}